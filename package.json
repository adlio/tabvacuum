{
  "name": "tabvacuum",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Power-user tab cleanup: close duplicates, merge windows, sort tabs, prune stale tabs.",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "node scripts/build.js",
    "package": "npm run build && npm run package:firefox && npm run package:chrome",
    "package:firefox": "web-ext build --source-dir dist/firefox/ --artifacts-dir artifacts/ --overwrite-dest",
    "package:chrome": "web-ext build --source-dir dist/chrome/ --artifacts-dir artifacts/ --overwrite-dest --filename tabvacuum-chrome.zip",
    "lint": "web-ext lint --source-dir dist/firefox/"
  },
  "devDependencies": {
    "vitest": "^3.0.0",
    "web-ext": "^8.0.0",
    "webextension-polyfill": "^0.12.0"
  }
}
